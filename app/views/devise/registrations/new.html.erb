<div class="container">
 <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
  <h2>サインアップ</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= f.error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
  </div>
  <br>
  <div class="field">
   <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
 </div>
　<br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "確認用パスワード" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary btn-block"%>
  </div>
 <% end %>

  <%= render "devise/shared/links" %>
 </div>
</div>
