<h1>編集画面</h1>
<%= form_for(@topic) do |f| %>
   <% if @topic.errors.any?%>
     <div id="error_explanation">
       <h2><% @topic.errors.count %>件のエラーがあります</h2>
       <ul>
         <% @topic.errors.full_messages.each do |msg| %>
          <li><% msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <%= f.label :content %>
   <%= f.text_field :content %>
   <br>
   <br>
   <%= f.submit "更新する"%>
 <% end %>
<br>
<%= link_to "一覧に戻る", topics_path %>
