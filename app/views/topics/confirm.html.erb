<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>この内容で投稿する</h3>
    <%= form_for(@topic) do |f| %>
    <%= f.hidden_field :content %>
    <p><%= @topic.content %></p>
     <%= f.submit "投稿する", class: 'btn btn-primary btn-block'%>
     <% end %>
     <br>
    <%= form_for(@topic, url: new_topic_path, method: "get") do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-warning btn-block' %>
    <% end %>
 </div>
</div>
